@using ProjectManagement.DataAccess.Model
@model IEnumerable<Teacher>
@{
    ViewBag.Title = "Teachers";
}

<h2>Teachers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var teacher in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => teacher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacher.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = teacher.Id }) |
                @Html.ActionLink("Details", "Details", new { id = teacher.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = teacher.Id })
            </td>
        </tr>
    }

</table>